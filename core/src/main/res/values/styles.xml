<resources>

    <!-- Base application theme. -->
    <style name="MessageCounterTheme" parent="AppTheme.Base">
    </style>

    <style name="MessageCounterTheme.Yeti" parent="AppTheme.LightAndDark.Base">
    </style>

    <!-- Base.Theme.Material3.Light.DarkActionBar -->
    <style name="AppTheme.Base" parent="Theme.Material3.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- <item name="preferenceTheme">@style/PreferenceThemeOverlay</item> -->
        <item name="android:textViewStyle">@style/AppTextViewStyle</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
    </style>

    <style name="AppTheme.LightAndDark.Base" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/teal_dark</item>
        <item name="colorPrimaryDark">@color/teal_dark</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorSecondary">@color/rocket_red</item>
        <item name="android:textViewStyle">@style/AppTextViewStyle</item>
    </style>

    <style name="buttonTintAccent">
    </style>
    
    <style name="AppTextViewStyle">
        <item name="android:fontFamily">@font/lato</item>
    </style>
    <style name="MyActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="elevation">0dp</item>
    </style>
</resources>
